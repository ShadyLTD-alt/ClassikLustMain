{
  "name": "LunaBug",
  "version": "1.0.1",
  "description": "Standalone AI-powered debugging system for ClassikLust",
  "author": "Steven",
  "created": "2025-11-02",
  "config": {
    "standalone": true,
    "bootPriority": "maximum",
    "emergencyMode": true,
    "maxLogsInMemory": 2000,
    "maxCriticalLogs": 500,
    "maxDebugHistory": 100,
    "autoInitialize": true,
    "modules": {
      "database": {
        "enabled": true,
        "monitorQueries": true,
        "detectSchemaIssues": true,
        "maxQueryLog": 500
      },
      "gameplay": {
        "enabled": true,
        "monitorTaps": true,
        "trackPerformance": true,
        "trackAchievements": true
      },
      "ai": {
        "enabled": true,
        "endpoint": "/api/lunabug",
        "fallbackEndpoint": "/api/mistral",
        "maxChatHistory": 50,
        "model": "Ministral-3B",
        "temperature": 0.05,
        "maxTokens": 2048,
        "topP": 1,
        "apiKeys": {
          "primary": "MISTRAL_API_KEY",
          "debug": "MISTRAL_DEBUG_API_KEY"
        },
        "system": {
          "defaultPrompt": "DEBUG_ANALYSIS",
          "customInstructions": [
            "You are LunaBug - an AI debugging assistant for ClassikLust game development.",
            "Focus on TypeScript, React, PostgreSQL, and game development patterns.",
            "Always provide working code solutions with explanations.",
            "Detect camelCase vs snake_case database column issues.",
            "Consider mobile-first responsive design in UI suggestions.",
            "Prioritize performance and user experience optimizations.",
            "Remember this is an adult anime-themed tapping game context."
          ],
          "contextAware": true,
          "includeProjectInfo": true
        }
      }
    },
    "ui": {
      "theme": "dark",
      "branding": {
        "primary": "#7c3aed",
        "secondary": "#c084fc",
        "accent": "#a855f7",
        "success": "#10b981",
        "warning": "#f59e0b",
        "error": "#ef4444"
      },
      "animations": true,
      "emergencyOverlay": true,
      "showInstructions": true,
      "showMetrics": true
    },
    "logging": {
      "enableConsoleCapture": true,
      "enableErrorCapture": true,
      "enablePerformanceTracking": true,
      "logLevels": ["error", "warn", "info", "debug"],
      "persistCritical": true,
      "maxFileSize": "10MB"
    },
    "experimental": {
      "memoryProfiling": false,
      "networkMonitoring": false,
      "aiCodeGeneration": false
    }
  },
  "profiles": {
    "development": {
      "aiModel": "mistral-large-latest",
      "temperature": 0.05,
      "verbose": true,
      "debugMode": true
    },
    "production": {
      "aiModel": "mistral-medium",
      "temperature": 0.1,
      "verbose": false,
      "debugMode": false
    },
    "emergency": {
      "aiModel": "mistral-small",
      "temperature": 0.0,
      "verbose": true,
      "debugMode": true,
      "fallbackMode": true
    }
  }
}