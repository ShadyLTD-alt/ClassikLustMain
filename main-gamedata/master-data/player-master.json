{
  "defaultPlayerState": {
    "points": 0,
    "lustPoints": 100,
    "lustGems": 0,
    "energy": 1000,
    "energyMax": 1000,
    "level": 1,
    "passiveIncomeRate": 10,
    "passiveIncomeCap": 10000,
    "energyRegenRate": 1,
    "upgrades": {},
    "unlockedCharacters": ["aria"],
    "unlockedImages": [],
    "selectedCharacterId": "aria",
    "selectedImageId": null,
    "selectedAvatarId": null,
    "displayImage": null,
    "isAdmin": false,
    "boostActive": false,
    "boostMultiplier": 1.0,
    "boostExpiresAt": null,
    "boostEnergy": 0,
    "totalTapsToday": 0,
    "totalTapsAllTime": 0,
    "lastTapValue": 1,
    "lastDailyReset": null,
    "lastWeeklyReset": null,
    "settings": {
      "theme": "dark",
      "notifications": true,
      "autoSave": true
    }
  },
  "playerDataStructure": {
    "fields": {
      "id": { "type": "uuid", "required": true },
      "telegramId": { "type": "string", "required": true, "unique": true },
      "username": { "type": "string", "required": true },
      "points": { "type": "bigint", "default": 0 },
      "lustPoints": { "type": "bigint", "default": 100 },
      "lustGems": { "type": "integer", "default": 0 },
      "energy": { "type": "integer", "default": 1000 },
      "energyMax": { "type": "integer", "default": 1000 },
      "level": { "type": "integer", "default": 1 },
      "passiveIncomeRate": { "type": "integer", "default": 10 },
      "passiveIncomeCap": { "type": "integer", "default": 10000 },
      "energyRegenRate": { "type": "integer", "default": 1 },
      "upgrades": { "type": "jsonb", "default": {} },
      "unlockedCharacters": { "type": "jsonb", "default": ["aria"] },
      "unlockedImages": { "type": "jsonb", "default": [] },
      "selectedCharacterId": { "type": "string", "default": "aria" },
      "selectedImageId": { "type": "string", "nullable": true },
      "selectedAvatarId": { "type": "string", "nullable": true },
      "displayImage": { "type": "string", "nullable": true },
      "isAdmin": { "type": "boolean", "default": false },
      "boostActive": { "type": "boolean", "default": false },
      "boostMultiplier": { "type": "decimal", "default": 1.0 },
      "boostExpiresAt": { "type": "timestamp", "nullable": true },
      "boostEnergy": { "type": "integer", "default": 0 },
      "totalTapsToday": { "type": "integer", "default": 0 },
      "totalTapsAllTime": { "type": "bigint", "default": 0 },
      "lastTapValue": { "type": "integer", "default": 1 },
      "lastDailyReset": { "type": "timestamp", "nullable": true },
      "lastWeeklyReset": { "type": "timestamp", "nullable": true },
      "createdAt": { "type": "timestamp", "auto": true },
      "updatedAt": { "type": "timestamp", "auto": true },
      "lastLogin": { "type": "timestamp", "nullable": true }
    }
  },
  "syncSettings": {
    "saveToJsonFirst": true,
    "saveToDbOnChange": true,
    "syncIntervalMinutes": 5,
    "backupOnLevelUp": true,
    "validateBeforeSave": true
  },
  "validationRules": {
    "fieldNaming": {
      "energyMax": "REQUIRED - never use maxEnergy",
      "energyRegenRate": "REQUIRED - for energy regeneration upgrades",
      "lustPoints": "REQUIRED - primary currency display",
      "lustGems": "REQUIRED - premium currency"
    },
    "dataIntegrity": {
      "singleRowPerPlayer": true,
      "noHardcodedDefaults": "All defaults must come from this file",
      "upgradesAsColumns": "Store upgrade levels as individual columns, not separate table"
    }
  }
}